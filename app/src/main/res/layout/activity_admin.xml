<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/admin_bg_gradient"
    android:gravity="center">

    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME ADMIN"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:layout_marginBottom="3dp"/>

    <!-- Buttons Container -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="1dp">

        <!-- Category Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:icon="@drawable/cat"
                app:iconTint="@null"
                android:background="#170E0E"
                android:backgroundTint="@color/green_500"
                android:icon="@drawable/ic_category"
                android:padding="14dp"
                android:text="Add Category"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:iconGravity="textTop"
                app:iconPadding="18dp"
                app:iconSize="64dp" />

        </androidx.cardview.widget.CardView>

        <!-- Product Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:icon="@drawable/prod"
                app:iconTint="@null"
                android:background="#2196F3"
                android:backgroundTint="@color/blue_500"
                android:gravity="center"
                android:icon="@drawable/ic_product"
                android:padding="14dp"
                android:text="Add Product"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTintMode="add"
                app:cornerRadius="16dp"
                app:iconGravity="textTop"
                app:iconPadding="18dp"
                app:iconSize="64dp" />

        </androidx.cardview.widget.CardView>

        <!-- Manage Categories Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManageCategories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2196F3"
                android:backgroundTint="@color/blue_500"
                android:gravity="center"
                android:padding="14dp"
                app:icon="@drawable/classification"
                app:iconTint="@null"
                android:text="Manage Category"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTintMode="add"
                app:cornerRadius="16dp"
                app:iconGravity="textTop"
                app:iconSize="64dp"
                app:iconPadding="18dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManageProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A02B2B"
                android:backgroundTint="@color/purple_500"
                android:gravity="center"
                android:padding="14dp"
                app:icon="@drawable/features"
                app:iconTint="@null"
                android:text="Manage Product"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTintMode="src_over"
                app:cornerRadius="16dp"
                app:iconGravity="textTop"
                app:iconPadding="18dp"
                app:iconSize="64dp" />

        </androidx.cardview.widget.CardView>


    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageEducation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Educational Content"
        android:layout_marginTop="8dp"
        app:icon="@drawable/edu"
        app:iconTint="@null"
        app:cornerRadius="8dp"
        android:textColor="@color/white"/>

</LinearLayout>